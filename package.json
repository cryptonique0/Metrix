{
  "name": "llamaflow",
  "version": "1.0.0",
  "description": "Multi-chain DeFi protocol metrics & analytics platform with real-time TVL tracking",
  "author": "cryptonique0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:web": "vite --port 5173",
    "build": "tsc -p . && npm run build:web",
    "build:web": "vite build --outDir dist/web",
    "start": "node dist/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "ts-node src/db/init.ts",
    "docker:build": "docker build -t llamaflow:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@stacks/blockchain-api-client": "^7.7.1",
    "axios": "^1.4.0",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.0",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.17",
    "chart.js": "^4.5.1",
    "graphql-request": "^7.4.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.6.1",
    "jest-environment-node": "^29.6.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vite": "^5.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
